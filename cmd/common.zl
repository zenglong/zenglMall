use builtin, mysql, request;
def TRUE 1;
def FALSE 0;
inc '../config.zl';
inc '../mysql.zl';

// 初始化数据库连接
fun init_db()
	global config;
	db = bltArray();
	Mysql.init(db, config);
	return db;
endfun

if(bltIsRunInCmd())
	bltSetImmediatePrint(TRUE);
	print 'now in cmd';
else
	print 'must be run in cmd';
	bltExit();
endif

Mysql db;
db = init_db();
