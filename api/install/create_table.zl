if(mysqlQuery(con, "CREATE TABLE goods_attr_value(
	id int NOT NULL AUTO_INCREMENT,
	`aid` int NOT NULL DEFAULT '0' COMMENT '所属的属性的ID',
	`name` varchar(80) NOT NULL DEFAULT '' COMMENT '属性值名称',
